 		so->currPos.itemIndex = MaxTIDsPerBTreePage - 1;
 	}
 
+	/*
+	Leaf page lookahead prefetch
+	*/
+
+	if (btree_leaf_prefetch && P_ISLEAF(opaque) && pstate.continuescan)
+	{
+		BlockNumber next_block = InvalidBlockNumber;
+
+		if (ScanDirectionIsForward(dir))
+			next_block = opaque->btpo_next;
+		else
+			next_block = opaque->btpo_prev;
+
+		if (BlockNumberIsValid(next_block) && next_block != NULL){
+			PrefetchBuffer(scan->indexRelation, MAIN_FORKNUM, next_block);
+		}
+	
+	}
+
 	return (so->currPos.firstItem <= so->currPos.lastItem);
 }
 
