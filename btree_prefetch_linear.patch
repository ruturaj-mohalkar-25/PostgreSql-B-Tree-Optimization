 	if (unlikely(high < low))
 		return low;
 
+
+	if (btree_binsrch_linear && P_ISLEAF(opaque))
+	{
+		int num_items = high - low + 1;
+
+		if(num_items>=2 && num_items <= btree_binsrch_linear_threshold){
+			cmpval = key->nextkey ? 0 : 1;
+			if(!key->backward){
+				for (OffsetNumber off = low; off <= high; off = OffsetNumberNext(off))
+				{
+					result = _bt_compare(rel, key, page, off);
+
+					if (result < cmpval){
+						return off;
+					}
+				}
+				return OffsetNumberNext(high);
+			}
+			else{
+				for (OffsetNumber off = high; off >= low; off = OffsetNumberPrev(off))
+				{
+					result = _bt_compare(rel, key, page, off);
+
+					if (result >= cmpval){
+						return off;
+					}
+				}
+				return OffsetNumberPrev(low);
+			}
+		}
+	}
 	/*
 	 * Binary search to find the first key on the page >= scan key, or first
 	 * key > scankey when nextkey is true.
